<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="root" id="1">
        <createTable schemaName="it_sector"
                tableName="customer">
            <column name="id" type="int"/>
            <column name="name" type="varchar(255)"/>
            <column name="country" type="varchar(255)"/>
            <column name="city" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="phone" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="root" id="2">
        <addPrimaryKey columnNames="id"
                constraintName="customer_pk"
                schemaName="it_sector"
                tableName="customer"/>
    </changeSet>

    <changeSet author="root" id="3">
        <createTable schemaName="it_sector"
                tableName="project">
            <column name="id" type="int"/>
            <column name="customer_id" type="int"/>
            <column name="title" type="varchar(255)"/>
            <column name="total_budget" type="varchar(255)"/>
            <column name="start_date" type="varchar(255)"/>
            <column name="delivery_date" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="root" id="4">
        <addPrimaryKey columnNames="id"
                constraintName="project_pk"
                schemaName="it_sector"
                tableName="project"/>
    </changeSet>

    <changeSet author="root" id="5">
        <addForeignKeyConstraint baseColumnNames="customer_id"
                baseTableName="project"
                constraintName="customer_project_fk"
                onDelete="CASCADE"
                onUpdate="CASCADE"
                referencedColumnNames="id"
                referencedTableName="customer"/>
    </changeSet>

</databaseChangeLog>


